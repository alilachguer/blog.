{% extends "base.html.twig" %}
{% block body %}
    <div class="container is-fluid article-container">
        <article class="content article">
            <h1 class="title is-1 ">{{ post.title }}</h1>
            <footer class="subtitle">
                <div class="tags has-addons">
                    <span class="tag is-primary">{{ post.username }}</span>
                    <span class="tag">{{ post.publishedDatetime | date('d-m-y h:i a') }}</span>
                </div>
            </footer>
            <section class="media-content">
                <p>
                    {{ post.content }}
                </p>
            </section>
        </article>
    </div>
{% endblock %}
