{% extends "base.html.twig" %}
{% block body %}

    <div class="container is-widescreen" id="main">
        {% for post in posts %}
            <div class="columns is-centered">
                <div class="column is-four-fifths media post">
                    <div class="level">
                        <div class="level-left">
                            <h2 class="title is-4 level-item">
                                <a href="/post/{{ post.slug }}">{{ post.title }}</a>
                            </h2>
                        </div>

                        <div class="level-right">
                            <a class="level-item" href="crud/edit/{{ post.id }}">
                                <div class="button level-item is-success">
                                    <span class="icon">
                                        <i class="far fa-edit"></i>
                                    </span>
                                </div>
                            </a>
                            <a class="level-item" href="crud/delete/{{ post.id }}">
                                <div class="button level-item is-danger" href="crud_delete">
                                    <span class="icon">
                                        <i class="fas fa-trash-alt"></i>
                                    </span>
                                </div>
                            </a>
                        </div>

                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}
